<div class="row-fluid">

  <div class="span6">
    
  <div class="heading_2">Tweets Cloud</div>
</div>
  
  <div class="span6">
    
  </div>
</div>

<div class='row-fluid'>
  <div class="span12" style="margin-left:0px;margin-top:200px;">


<div style="margin-left:300px;">
<%= form_tag(tweets_cloud_path,:method => 'post' ,:style=>"margin-top:0px;" , :class=>"form-horizontal" ,:onSubmit=>"return validateSearch();") %>

<label class="control-label" for="input01" style="width: 300px;padding-right: 15px;font-family: verdana;font-size: 21px;font-weight: bold;color: white;">Enter Your Twitter Handle : @  </label>

<%= text_field_tag("TXT_SEARCH", "" , :name=>"username", :autocomplete=>"off" ,:style=>"height: 35px;width : 300px;font-size: 2.3em;") %>
 <br/><br/>
<%= submit_tag 'Generate Cloud', :class => "btn btn-large btn-danger" , :style=>"margin-left:370px;padding: 20px 43px;font-size:20px" %>

</div>
    <% if @response_text %>
    <div style="color:white; margin-right: 20px;font-size: 20px;float:right"> { <%= @response_text %> } </div>
    <% end %>
</div>
</div>

<script type="text/javascript" src="assets/jQuery.min.js"></script>
<script type="text/javascript">

 function validateSearch()
  {
    query = jQuery("#TXT_SEARCH").val();
    if(query == ""){
      return false;
    }
    return true;
  }
  
</script>


